<h1>Edit List</h1>

<form action="/lists/<%= @list.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    <label for="title">Title: </label>
    <input type="text" name="list[title]" id="title" value="<%= @list.title %>">
  </div>

  <div>
    <label for="completed">Completed? </label>
    <input type="checkbox" name="list[completed]" id="completed" <%= 'checked' if @list.completed %>>
  </div>

  <input type="submit" value="Edit List">
</form>